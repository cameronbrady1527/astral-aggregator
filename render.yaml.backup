services:
  - type: web
    name: astral-aggregator
    env: python
    plan: free
    buildCommand: pip install -r requirements.txt
    startCommand: uvicorn app.main:app --host 0.0.0.0 --port ${PORT:-8000}
    envVars:
      - key: PYTHON_VERSION
        value: 3.12.0
      - key: FIRECRAWL_API_KEY
        sync: false
      - key: DATABASE_URL
        sync: false
    healthCheckPath: /

databases:
  - name: astral-db
    plan: free
    databaseName: astral
    user: astral_user 